<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#73000000">

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/mbridge_video_common_alertview_bg_padding"
        android:background="@drawable/mbridge_cm_feedback_dialog_view_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/mbridge_video_common_alertview_titleview"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:singleLine="true"
                android:text="选择反馈内容"
                android:textColor="@color/mbridge_black"
                android:textSize="@dimen/mbridge_video_common_alertview_title_size"
                android:textStyle="bold" />

            <ScrollView
                android:id="@+id/mbridge_video_common_alertview_contentview_scrollview"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:layout_height="0dp"
                android:layout_below="@+id/mbridge_video_common_alertview_titleview"
                android:layout_marginTop="@dimen/mbridge_video_common_alertview_content_margintop">

                <LinearLayout
                    android:id="@+id/mbridge_video_common_alertview_contentview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" />
            </ScrollView>

            <View
                android:id="@+id/mbridge_video_common_alertview_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/mbridge_video_common_alertview_contentview_scrollview"
                android:background="#e5e5e5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp"
                android:layout_below="@+id/mbridge_video_common_alertview_line"
                android:background="@drawable/mbridge_cm_feedback_dialog_view_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mbridge_video_common_alertview_confirm_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/mbridge_video_common_alertview_button_height"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="关闭"
                    android:textColor="@color/mbridge_black"
                    android:textSize="@dimen/mbridge_video_common_alertview_button_textsize" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#e5e5e5" />

                <Button
                    android:id="@+id/mbridge_video_common_alertview_cancel_button"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/mbridge_video_common_alertview_button_height"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center"
                    android:text="提交"
                    android:textColor="@color/mbridge_cm_feedback_dialog_chice_bg_pressed"
                    android:textSize="@dimen/mbridge_video_common_alertview_button_textsize" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>