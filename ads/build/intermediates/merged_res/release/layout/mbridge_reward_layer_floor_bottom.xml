<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mbridge_viewgroup_ctaroot"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_centerVertical="true"
    android:background="@color/mbridge_reward_cta_bg">

    <ImageView
        android:id="@+id/mbridge_iv_appicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_toStartOf="@+id/mbridge_tv_install"
        android:layout_toLeftOf="@+id/mbridge_tv_install"
        android:layout_toEndOf="@+id/mbridge_iv_appicon"
        android:layout_toRightOf="@+id/mbridge_iv_appicon">

        <TextView
            android:id="@+id/mbridge_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/mbridge_reward_white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mbridge_tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mbridge_tv_title"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/mbridge_reward_white"
            android:textSize="11sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/mbridge_tv_install"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLength="8"
        android:maxLines="1"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:textStyle="bold" />
</RelativeLayout>