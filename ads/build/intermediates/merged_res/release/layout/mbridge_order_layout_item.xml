<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mbridge_choice_frl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center">

    <RelativeLayout
        android:id="@+id/mbridge_lv_item_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/mbridge_lv_iv_burl"
            android:layout_width="match_parent"
            android:layout_height="220dip"
            android:scaleType="centerCrop"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp" />
        <RelativeLayout
            android:id="@+id/mbridge_lv_iv_cover"
            android:layout_width="match_parent"
            android:layout_height="220dip"
            android:scaleType="fitXY"
            android:background="@color/mbridge_black_66"
            />
        <com.mbridge.msdk.dycreator.baseview.cusview.MBridgeImageView
            android:id="@+id/mbridge_lv_iv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/mbridge_lv_iv_burl"
            android:layout_alignTop="@+id/mbridge_lv_iv_burl"
            android:layout_margin="20dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/mbridge_order_viewed_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/mbridge_lv_iv_burl"
            android:layout_alignLeft="@+id/mbridge_lv_iv_burl"
            android:layout_alignTop="@+id/mbridge_lv_iv_burl"
            android:background="@drawable/mbridge_reward_shape_order_history"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:paddingRight="10dp"
            android:paddingBottom="8dp"
            android:textColor="@color/mbridge_black"
            android:textStyle="italic|bold"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/mbridge_iv_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mbridge_lv_iv_burl"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/mbridge_lv_iv"
            android:background="@drawable/mbridge_reward_shape_order">

            <com.mbridge.msdk.videocommon.view.RoundImageView
                android:id="@+id/mbridge_lv_icon_iv"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:scaleType="fitXY" />

            <RelativeLayout
                android:id="@+id/mbridge_text_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@+id/mbridge_lv_tv_install"
                android:layout_toLeftOf="@+id/mbridge_lv_tv_install"
                android:layout_toEndOf="@id/mbridge_lv_icon_iv"
                android:layout_toRightOf="@id/mbridge_lv_icon_iv">

                <TextView
                    android:id="@+id/mbridge_lv_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textColor="@color/mbridge_black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mbridge_lv_desc_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/mbridge_lv_title_tv"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:lines="1"
                    android:textSize="13sp" />

            </RelativeLayout>
            <com.mbridge.msdk.video.dynview.widget.MBridgeLevelLayoutView
                android:id="@+id/mbridge_lv_sv_starlevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_alignLeft="@+id/mbridge_text_layout"
                android:layout_below="@+id/mbridge_lv_tv_install"
                />


            <com.mbridge.msdk.dycreator.baseview.cusview.MBridgeTextView
                android:id="@+id/mbridge_lv_tv_install"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="110dip"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical|right"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/mbridge_reward_shape_videoend_buttonbg"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:paddingEnd="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="install"
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:maxLength="8"
                />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>